

@model List<bar_prototype.Model.PaymentInstruction>

@{
    ViewData["Title"] = "Post Log";
}

<p>
    @Html.ActionLink("Add New Payment Instruction", "Create")
</p>
<div>
<table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Payment Method</th>
            <th>Amount</th>
            <th>Status</th>
         </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td><a href='@Url.Action("Details", new { id = item.Id })'>@item.Id</a></td>
                <td>@item.PaymentMethod</td>
                <td>@item.Amount</td>
                <td>@item.Status</td>
            </tr>
        }
        </tbody>
</table>
</div>